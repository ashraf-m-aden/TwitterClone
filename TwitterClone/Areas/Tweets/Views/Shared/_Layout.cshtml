<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TwitterClone</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TwitterClone.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

    </header>
    <div class="container-fluid">
        <div class="row">
            <div class="col-3 sidebar">
                <partial name="./Partials/_SidebarLeft.cshtml"/>

            </div>

            <div class="col-6 main">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <div class="col-3 sidebar_right">
                @await RenderSectionAsync("Scripts", required: false)

            </div>

        </div>
        
    </div>

    <footer class="border-top footer text-muted footer fixed-bottom">
        <div class="container">
            &copy; 2023 - TwitterClone -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
